{
    "name": "zalas/symfify",
    "type": "composer-plugin",
    "description": "Sets up a basic Symfony project in a code base that did not start as a Symfony project.",
    "homepage": "https://github.com/jakzal/symfify",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ],
    "require": {
        "php": "^7.1",
        "composer-plugin-api": "^1.0",
        "symfony/console": "^2.8||^3.0||^4.0",
        "symfony/filesystem": "^2.8||^3.0||^4.0"
    },
    "require-dev": {
        "tm/tooly-composer-script": "^1.0",
        "composer/composer": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Zalas\\Symfify\\Composer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zalas\\Symfify\\Composer\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
        "post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
    },
    "extra": {
        "class": "Zalas\\Symfify\\Composer\\Plugin",
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "tools": {
            "phpunit": {
                "url": "https://phar.phpunit.de/phpunit.phar",
                "sign-url": "https://phar.phpunit.de/phpunit.phar.asc",
                "only-dev": true
            },
            "phpunit-old": {
                "url": "https://phar.phpunit.de/phpunit-old.phar",
                "sign-url": "https://phar.phpunit.de/phpunit-old.phar.asc",
                "only-dev": true
            }
        }
    }
}
